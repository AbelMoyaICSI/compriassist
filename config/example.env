# Configuración de Ejemplo - ComprIAssist
# Asistente Inteligente de Compras de Productos E-commerce
# IMPORTANTE: No subir este archivo con credenciales reales a GitHub

# ============================================
# CONFIGURACIÓN GENERAL
# ============================================
APP_NAME=ComprIAssist
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# ============================================
# SERVIDOR
# ============================================
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ============================================
# BASE DE DATOS
# ============================================

# PostgreSQL Local
DB_HOST=localhost
DB_PORT=5432
DB_NAME=comprIAssist_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Supabase (Alternativa)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# ============================================
# AUTENTICACIÓN & SEGURIDAD
# ============================================
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# MÓDULOS DE IA - PATHS
# ============================================

# Chatbot
CHATBOT_MODEL_PATH=./models/chatbot/intent_model.pkl
SPACY_MODEL=es_core_news_sm

# Recomendación
RECOMMENDATION_MODEL_PATH=./models/recommendation/
RANDOM_FOREST_PATH=./models/recommendation/random_forest.pkl

# Sentiment Analysis
BERT_MODEL_PATH=./models/sentiment/bert_sentiment
SVM_MODEL_PATH=./models/sentiment/svm_model.pkl

# Visual Search
CNN_MODEL_PATH=./models/visual_search/cnn_fashion.h5
RESNET_EMBEDDINGS_PATH=./models/visual_search/embeddings.npy

# Generative AI
T5_MODEL_PATH=./models/generative/t5_finetuned
GPT_MODEL_PATH=./models/generative/gpt_adapted

# ============================================
# APIs EXTERNAS (Opcional)
# ============================================

# OpenAI (para IA Generativa avanzada)
OPENAI_API_KEY=sk-your-openai-key-here

# HuggingFace (para modelos adicionales)
HUGGINGFACE_TOKEN=hf_your_token_here

# ============================================
# LÍMITES Y CONFIGURACIÓN
# ============================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Cache
CACHE_TTL_SECONDS=3600
USE_REDIS=False
REDIS_URL=redis://localhost:6379

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=./logs/compriassist.log

# ============================================
# SENTRY (Monitoreo de errores - Producción)
# ============================================
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# ============================================
# CONFIGURACIÓN DE MODELOS
# ============================================

# BERT
BERT_MAX_LENGTH=128
BERT_BATCH_SIZE=8

# ResNet50
RESNET_IMAGE_SIZE=224

# T5
T5_MAX_LENGTH=256
T5_TEMPERATURE=0.7

# ============================================
# NOTAS
# ============================================
# 1. Copiar este archivo como .env en la raíz del proyecto
# 2. Cambiar todos los valores de ejemplo por credenciales reales
# 3. NUNCA subir .env a GitHub (está en .gitignore)
# 4. En producción, usar variables de entorno del servidor
